<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="110dp"
    android:background="@drawable/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- App Logo -->
            <ImageView
                android:layout_width="142dp"
                android:layout_height="119dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logo2" />

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FillThePlate"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- App Purpose -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FillThePlate is a non-profit initiative focused on reducing food waste by redistributing surplus food to those in need. We aim to connect donors with hungry individuals to ensure no meal goes to waste."
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Hunger Statistics -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More than 600 million people are projected to face hunger by 2030. Food security is a growing concern worldwide, and our platform aims to tackle this issue by making food distribution efficient and accessible."
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- App Features -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Features:\n\n✔ Donate surplus food easily\n✔ Request food for those in need\n✔ Track food status in real-time\n✔ Ensure minimal food waste through efficient redistribution"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>

            <!-- Contact Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us:\n\nCompany: FillThePlate Organization\nEmail: contact@filltheplate.com"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>